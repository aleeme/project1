<!DOCTYPE html>
<html>

<head>
    <%-include('base/header.ejs') %>

    <title>login</title>
</head>

<body>
    <%-include('base/navbarTop.ejs')-%>

    <h2>Login Form</h2>

    <img src="/images/user_icon.png" style="width:250px; display:block;">

    <form action="/auth/login_process" method="post">
        <label for="userId"><b>UserId</b></label>
        <input type="text" placeholder="Enter UserId" name="userId" required><br>

        <label for="psw"><b>Password</b></label>
        <input type="password" placeholder="Enter Password" name="psw" required><br>

        <button type="submit">Login</button><br>
        <div style="color:red;"><p><%= feedback %></p></div>

        <p>Don't have an account? <a href="/auth/register">Sign Up</a><br></p>
    </form>
    <%-include('base/footer.ejs')%>

</body>

</html>